{
  "compilerOptions": {
    "declaration": false,
    "declarationMap": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "preserveSymlinks": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": [
      "jest"
    ]
  },
  "include": [
    "./**/*.ts",
    "./**/*.spec.ts"
  ],
  "types": [
    "jest"
  ]
}
